  component Page
  component Navigation
  component TestimonyForm
  component Providers
  component AuthContext
  component APIsLayer
}

component SupabaseClient
component Prisma
component AIService
component CDN

Page --> Navigation
Page --> TestimonyForm
Page --> Providers
